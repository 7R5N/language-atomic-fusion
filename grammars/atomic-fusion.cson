'name': 'Atomic.Fusion'
'scopeName': 'source.text.html.fusion'

'fileTypes': [
	'fusion'
]

'firstLineMatch': '^(\\n)?((prototype)(\\()(\.+)(\\:)(\.+)(\\)))\\s*(<)\\s*((prototype)(\\()(\.+)(\\:)(\.+)(\\)))\\s*(\{)\\s*$'

'patterns': [
	{
		# PROTOTYPE
		'begin': '^((prototype)(\\()(\.+)(\\:)(\.+)(\\)))\\s*(<)\\s*((prototype)(\\()(\.+)(\\:)(\.+)(\\)))\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'prototype.fusion'
			'2':
				'name': 'prototype-keyword.static.fusion'
			'3':
				'name': 'bracket.static.fusion'
			'4':
				'name': 'prototype-path.static.fusion'
			'5':
				'name': 'operator.static.fusion'
			'6':
				'name': 'prototype-component.fusion'
			'7':
				'name': 'bracket.static.fusion'
			'8':
				'name': 'operator.static.fusion'
			'9':
				'name': 'prototype.fusion'
			'10':
				'name': 'prototype-keyword.static.fusion'
			'11':
				'name': 'bracket.static.fusion'
			'12':
				'name': 'prototype-path.static.fusion'
			'13':
				'name': 'operator.static.fusion'
			'14':
				'name': 'prototype-path.static.fusion'
			'15':
				'name': 'bracket.static.fusion'
			'16':
				'name': 'tree.fusion'
		'end': '^(\})\\s*$'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Import HTML Styles
				'include': 'text.html.basic'
			}
			{
				# Comments
				'include': '#comments'
			}
			{
				# Property Styleguide
				'include': '#styleguide'
			}
			{
				# Property Definition Single Line
				'include': '#property-definition-single'
			}
			{
				# Property Definition Multi Line
				'include': '#property-definition-multi'
			}
			{
				# Property Definition Dual
				'include': '#property-definition-dual'
			}
			{
				# Property Definition Numeric
				'include': '#property-definition-numeric'
			}
			{
				# Property Definition Expression
				'include': '#property-definition-expression'
			}
			{
				# Property Definition Condition
				'include': '#property-definition-condition'
			}
			{
				# Property Component
				'include': '#property-component'
			}
			{
				# Property Tag
				'include': '#property-tag'
			}
			{
				# Property Array
				'include': '#property-array'
			}
			{
				# Property Renderer
				'include': '#renderer'
			}
			# {
			# 	#
			# 	'include': '#tag-class-attribute'
			# }
		]
	}
	{
		'match': '\\b(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))\\b'
		'name': 'number.fusion'
	}
]

'repository':
	# Properties
	'property-definition-single':
		'match': '^\\s+((\\w+\\b)\\s*(\=)\\s*(\')(\.*)(\'))\\s*$'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'quote.fusion'
			'5':
				'name': 'property-value.fusion'
			'6':
				'name': 'quote.fusion'
	'property-definition-multi':
		'begin': '^\\s+(\\w+\\b)\\s*(\=)\\s*(\')\\s*$' # '^\\s+(\\w+)\\s*(\=)\\s*(\')(\.*[^\'])'
		'beginCaptures':
			'1':
				'name': 'property-keyword.fusion'
			'2':
				'name': 'operator.fusion'
			'3':
				'name': 'quote.fusion'
		'end': '^\\s*(\')\\s*$'
		'endCaptures':
			'1':
				'name': 'quote.fusion'
		'patterns': [
			{
				# Import HTML Styles
				'include': 'text.html.basic'
			}
		]
	'property-definition-dual':
		'match': '^\\s+((\\w+)\\s*(\=)\\s*(true|false\\b))\\s*$'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'property-value.fusion'
	'property-definition-numeric':
		'match': '^\\s+((\\w+)\\s*(\=)\\s*(\\d\\b))\\s*$'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'number.fusion'
	'property-definition-expression':
		'match': '^\\s+((\\w+\\b)\\s*(\=)\\s*(\$\{\')(\.*)(\'\}))\\s*$'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'quote.fusion'
			'5':
				'name': 'property-value.fusion'
			'6':
				'name': 'quote.fusion'
	'property-definition-condition':
		'match': '^\\s+((\@\\w+\\b)\\s*(\=)\\s*(\')(\.*)(\'))\\s*$'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'quote.fusion'
			'5':
				'name': 'property-value.fusion'
			'6':
				'name': 'quote.fusion'
	'property-component':
		'begin': '^\\s+((\\.+[^\\d]\\b)\\s*(\=)\\s*(?!(Neos.Fusion\\b))(\.+\\b)(\:)(?!(Array\\b))(\.+))\\b\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'5':
				'name': 'property-path.fusion'
			'6':
				'name': 'operator.fusion'
			'8':
				'name': 'property-component.fusion'
			'9':
				'name': 'tree.fusion'
		'end': '^\\s+(\})\\s*$'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Property Definition Single Line
				'include': '#property-definition-single'
			}
			{
				# Property Definition Multi Line
				'include': '#property-definition-multi'
			}
			{
				# Property Definition Dual
				'include': '#property-definition-dual'
			}
			{
				# Property Definition Numeric
				'include': '#property-definition-numeric'
			}
			{
				# Property Definition Expression
				'include': '#property-definition-expression'
			}
			{
				# Property Definition Condition
				'include': '#property-definition-condition'
			}
			{
				# Property Array
				'include': '#property-array'
			}
			{
				# Import HTML Styles
				'include': 'text.html.basic'
			}
		]
	'property-tag':
		'begin': '^\\s+((\\w+\\b)\\s*(\=)\\s*(Neos.Fusion\\b)(\:)(Tag\\b))\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'property-path.fusion'
			'5':
				'name': 'operator.fusion'
			'6':
				'name': 'property-element.fusion'
			'7':
				'name': 'tree.fusion'
		'end': '^\\s+(\})\\s*$'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Property Array Item
				'include': '#property-array-item'
			}
			{
				# Empty Property Array Item
				'include': '#property-array-item-empty'
			}
		]
	'property-array':
		'begin': '^\\s+((\\w+\\b)\\s*(\=)\\s*(Neos.Fusion\\b)(\:)(Array|RawArray\\b))\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'property-keyword.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'property-path.fusion'
			'5':
				'name': 'operator.fusion'
			'6':
				'name': 'property-element.fusion'
			'7':
				'name': 'tree.fusion'
		'end': '^\\s+(\})\\s*$'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Property Definition Array Item
				'include': '#property-array-item'
			}
			{
				# Property Definition Single Line
				'include': '#property-definition-single'
			}
			{
				# Property Definition Multi Line
				'include': '#property-definition-multi'
			}
			{
				# Property Definition Dual
				'include': '#property-definition-dual'
			}
			{
				# Property Definition Numeric
				'include': '#property-definition-numeric'
			}
			{
				# Property Definition Expression
				'include': '#property-definition-expression'
			}
			{
				# Property Definition Condition
				'include': '#property-definition-condition'
			}
			{
				# Property Component
				'include': '#property-component'
			}
			{
				# Property Tag
				'include': '#property-tag'
			}
			{
				# Property Array
				'include': '#property-array'
			}
		]
	'property-array-item':
		'begin': '^\\s+((\\d+\\b)\\s*(\=)\\s*(\.+)(\:)(\.+))\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'number.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'property-path.fusion'
			'5':
				'name': 'operator.fusion'
			'6':
				'name': 'property-component.fusion'
			'7':
				'name': 'tree.fusion'
		'end': '^\\s+(\})\\s*$'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Property Definition Single Line
				'include': '#property-definition-single'
			}
			{
				# Property Definition Multi Line
				'include': '#property-definition-multi'
			}
			{
				# Property Definition Dual
				'include': '#property-definition-dual'
			}
			{
				# Property Definition Numeric
				'include': '#property-definition-numeric'
			}
			{
				# Property Definition Expression
				'include': '#property-definition-expression'
			}
			{
				# Property Definition Condition
				'include': '#property-definition-condition'
			}
			{
				# Property Component
				'include': '#property-component'
			}
			{
				# Property Tag
				'include': '#property-tag'
			}
			{
				# Property Array
				'include': '#property-array'
			}
		]
	'property-array-item-empty':
		'match': '^\\s+((\\d+\\b)\\s*(\=)\\s*(\')(\'))\\s*$'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'number.fusion'
			'3':
				'name': 'operator.fusion'
			'4':
				'name': 'quote.fusion'
			'5':
				'name': 'quote.fusion'
	'property-embed':
		'match': '((\{)(\\w+\\b)(\.)(\\w+\\b)(\}))'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'bracket-embedded.fusion'
			'3':
				'name': 'property-path-embedded.fusion'
			'4':
				'name': 'operator.fusion'
			'5':
				'name': 'property-keyword.fusion'
			'6':
				'name': 'bracket-embedded.fusion'
	'component-embed':
		'match': '((\<)(\.+\\b)(\:)(\.+\\b)(\\s*\\/\>))'
		'captures':
			'1':
				'name': 'property.fusion'
			'2':
				'name': 'bracket-embedded.fusion'
			'3':
				'name': 'property-path.fusion'
			'4':
				'name': 'operator.fusion'
			'5':
				'name': 'property-component.fusion'
			'6':
				'name': 'bracket-embedded.fusion'
	# Comments
	'comments':
		'patterns': [
			{
				'match': '\\w+\\s*((//|/\\*).*)'
				'captures':
					'1':
						'name': 'invalid.illegal.fusion'
			}
			{
				'begin': '^(\\s*)(/\\*)'
				'beginCaptures':
					'2':
						'name': 'punctuation.definition.comment.fusion'
				'end': '(\\*/)|^(?!\\s\\1)' # Must be indented by at least one space
				'endCaptures':
					'1':
						'name': 'punctuation.definition.comment.fusion'
				'name': 'comment.block.fusion'
			}
			{
				'begin': '^(\\s*)(//)'
				'beginCaptures':
					'2':
						'name': 'punctuation.definition.comment.fusion'
				'end': '^(?!\\s\\1)' # Must be indented by at least one space
				'name': 'comment.line.fusion'
			}
		]
	# Styleguide
	'styleguide':
		'begin': '^\\s+(@styleguide\\b)\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'context.static.fusion'
			'2':
				'name': 'tree.fusion'
		'end': '^\\s+(\})'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Property Definition Single Line
				'include': '#property-definition-single'
			}
			{
				# Property Definition Multi Line
				'include': '#property-definition-multi'
			}
			{
				# Property Definition Dual
				'include': '#property-definition-dual'
			}
			{
				# Property Definition Numeric
				'include': '#property-definition-numeric'
			}
			{
				# Property Definition Expression
				'include': '#property-definition-expression'
			}
			{
				# Property Definition Condition
				'include': '#property-definition-condition'
			}
			{
				# Props Listing @Styleguide
				'include': '#props'
			}
			{
				# Comments
				'include': '#comments'
			}
		]
	# Props @Styleguide
	'props':
		'begin': '^\\s+(props\\b)\\s*(\{)\\s*$'
		'beginCaptures':
			'1':
				'name': 'context.static.fusion'
			'2':
				'name': 'tree.fusion'
		'end': '^\\s+(\})'
		'endCaptures':
			'1':
				'name': 'tree.fusion'
		'patterns': [
			{
				# Property Definition Single Line
				'include': '#property-definition-single'
			}
			{
				# Property Definition Multi Line
				'include': '#property-definition-multi'
			}
			{
				# Property Definition Dual
				'include': '#property-definition-dual'
			}
			{
				# Property Definition Numeric
				'include': '#property-definition-numeric'
			}
			{
				# Property Definition Expression
				'include': '#property-definition-expression'
			}
			{
				# Property Definition Condition
				'include': '#property-definition-condition'
			}
			{
				# Property Component
				'include': '#property-component'
			}
			{
				# Property Tag
				'include': '#property-tag'
			}
			{
				# Property Array
				'include': '#property-array'
			}
		]
	# Renderer
	'renderer':
		'begin': '^\\s+(renderer\\b)\\s*(\=)\\s*([A-Za-z]+)(`)\\s*$'
		'beginCaptures':
			'1':
				'name': 'context.static.fusion'
			'2':
				'name': 'operator.static.fusion'
			'3':
				'name': 'language.static.fusion'
			'4':
				'name': 'quote.fusion'
		'end': '^([\\s\\S]*)(`)$'
		'endCaptures':
			'2':
				'name': 'quote.fusion'
		'patterns': [
			{
				# Embed Properties
				'include': '#property-embed'
			}
			{
				# Embed Component
				'include': '#component-embed'
			}
			{
				# Import HTML Styles
				'include': 'text.html.basic'
			}
		]






