{
    ".fusion": {
        "editor": {
            "commentStart": "// ",
            "increaseIndentPattern": "(?x)\n\t((\\{%\\s*(?:(else)?if|else|autoescape|for|block)\\s*%\\})\n\t)$",
            "decreaseIndentPattern": "(?x)\n\t(\\{%\\s*(elseif|end(?:if|else|autoescape|for|block))(?:\\s[^%\\}]*)?\\s*%\\})\n\t"
        }
    },
    ".fusion .meta.tag.template.value.fusion": {
        "editor": {
            "completions": [
                "none"
            ]
        }
    }
}
